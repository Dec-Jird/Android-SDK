<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/powered_by_google_light" />

        <Button
            android:id="@+id/Login"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="Login"
            android:text="Login"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Timing"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="Timing"
            android:text="Timing"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SendEvent"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="SendEvent"
            android:text="SendEvent"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SendScreenView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="SendScreenView"
            android:text="SendScreenView"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Purchase"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="Purchase"
            android:text="Purchase"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CustomDimension"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="CustomDimension"
            android:text="CustomDimension"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CustomMetric"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="CustomMetric"
            android:text="CustomMetric"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/NewSession"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="NewSession"
            android:text="NewSession"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SendException"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="SendException"
            android:text="SendException"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>