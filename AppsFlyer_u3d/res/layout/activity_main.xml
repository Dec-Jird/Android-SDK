<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/af_logo" />

        <Button
            android:id="@+id/Login"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="login"
            android:text="Login"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/completedRegistration"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="completedRegistration"
            android:text="Completed Registration"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/completedTutorial"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="completedTutorial"
            android:text="Completed Tutorial"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/levelAchieved"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="levelAchieved"
            android:text="Level Achieved"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/spentCredit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="spentCredit"
            android:text="Spent Credit"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/initiateCheckout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="initiateCheckout"
            android:text="Initiate Checkout"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/purchase"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="purchase"
            android:text="Purchase"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/achievementUnlocked"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="achievementUnlocked"
            android:text="Achievement Unlocked"
            android:textColor="#ff2f2cff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>